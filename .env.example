###############################################
# Environment Variables Template (.env.example)
# Copy to .env and customize.                
# Default: SQLite for local development.     
# Production: Use MySQL section below.       
###############################################

# --- Core Django Settings ---
SECRET_KEY=your-secret-key-here-generate-using-django
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# --- Database (Local Development: SQLite default) ---
# Leave DB_ENGINE unset for SQLite (recommended local)
# DB_ENGINE=django.db.backends.sqlite3

# --- Database (Production: Hostinger MySQL) ---
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=u623641178_CRM_AGNIVRIDHI
# DB_USER=u623641178_agnivridhi_crm
# DB_PASSWORD=change-me
# DB_HOST=localhost
# DB_PORT=3306

# --- Email Configuration ---
# Local development (console backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# Production (uncomment below)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@agnivridhiindia.com

# Razorpay Payment Gateway
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_secret

# Twilio WhatsApp Configuration (Recommended for CRM)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Alternative: WhatsApp Integration (Gupshup)
# WHATSAPP_API_KEY=your_gupshup_api_key
# WHATSAPP_APP_NAME=your_app_name
# WHATSAPP_SOURCE_NUMBER=919289555190

# Alternative: WhatsApp Cloud API
# WHATSAPP_ACCESS_TOKEN=your_access_token
# WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
# WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# --- CORS Configuration (Frontend URLs) ---
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# (Optional) Redis / Celery (not required if unused)
# REDIS_URL=redis://localhost:6379/0

# Site Configuration
SITE_NAME=Agnivridhi CRM
SITE_URL=https://crm.agnivridhiindia.com
COMPANY_PHONE=+919289555190
COMPANY_EMAIL=info@agnivridhiindia.com
COMPANY_ADDRESS=NX-ONE, TechZone 4, Greater Noida West, UP-201306

# --- Security (Set to True in production with HTTPS) ---
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# --- File Upload Settings ---
MAX_UPLOAD_SIZE=10485760
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,jpg,jpeg,png

# --- AI/ML Settings (optional features) ---
ENABLE_AI_RECOMMENDATIONS=True
MIN_TRAINING_DATA=10

# --- Twilio WhatsApp (optional) ---
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

###############################################
# End of .env.example                         #
###############################################
